package com.app.vacancyportal.dao.impl;

import org.hibernate.Session;
import org.hibernate.Transaction;

import com.app.vacancyportal.dao.RegistrationDao;
import com.app.vacancyportal.entity.User;
import com.app.vacancyportal.entity.UserDetail;
import com.app.vacancyportal.model.Login;
import com.app.vacancyportal.util.HibernateUtil;


public class AuthenticationDaoImpl implements RegistrationDao {

	@Override
	public void addUser(User registration) {
		Transaction transaction = null;
		
		try{
			Session session  = HibernateUtil.getSessionFactory().openSession();
			transaction = session.beginTransaction();
			session.save(registration);
			System.out.println("---AuthDao Called---");
			transaction.commit();
			session.close();
		}catch(Exception e) {
			System.out.println("Exception occured::"+e.toString());
			if(transaction!=null) {
				transaction.rollback();
			}
		}finally {
		
		}
		// mysql :: YYYY-MM-DD HH:MI:SS
		//Represents both a date and a time (yyyy-MM-dd-HH-mm-ss-ns)
	}

	@Override
	public void deleteUser(String email) {
		// TODO Auto-generated method stub
		
	}


}
